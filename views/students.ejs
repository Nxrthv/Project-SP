                                <option value="D" <%= section === 'D' ? 'selected' : '' %>>D</option>
                                <option value="E" <%= section === 'E' ? 'selected' : '' %>>E</option>
                                <option value="F" <%= section === 'F' ? 'selected' : '' %>>F</option>
                                <option value="G" <%= section === 'G' ? 'selected' : '' %>>G</option>
