        // Cambio de vista de tabla/tarjetas
        function showTab(tabId) {
            const tableTab = document.getElementById("tableTab");
            const cardsTab = document.getElementById("cardsTab");

            const tableBtn = document.getElementById("tableTabBtn");
            const cardsBtn = document.getElementById("cardsTabBtn");

            if (tabId === "tableTab") {
                tableTab.classList.add("active");
                cardsTab.classList.remove("active");

                tableBtn.classList.add("bg-blue-600", "text-white");
                tableBtn.classList.remove("bg-gray-200", "text-gray-700");

                cardsBtn.classList.remove("bg-blue-600", "text-white");
                cardsBtn.classList.add("bg-gray-200", "text-gray-700");
            } else {
                tableTab.classList.remove("active");
                cardsTab.classList.add("active");

                cardsBtn.classList.add("bg-blue-600", "text-white");
                cardsBtn.classList.remove("bg-gray-200", "text-gray-700");

                tableBtn.classList.remove("bg-blue-600", "text-white");
                tableBtn.classList.add("bg-gray-200", "text-gray-700");
            }
            
            // Re-inicializar paginación cuando se cambia de vista
            setTimeout(() => {
                initPagination();
            }, 100);
        }

