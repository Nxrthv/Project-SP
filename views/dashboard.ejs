            // Intentar cargar datos reales, si falla usar datos de ejemplo
            fetch("/api/estadisticas/grados")
                .then(res => res.json())
                .then(result => {
                    createDistributionChart(result);
                })
                .catch(err => {
                    console.error("❌ Error cargando datos del gráfico de distribución:", err);
