                            titleColor: "#1f2937",
                            bodyColor: "#4b5563",
                            borderColor: "#e5e7eb",
                            borderWidth: 1,
                            padding: 12,
                            boxPadding: 6,
                            usePointStyle: true,
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ": " + context.parsed.y;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            min: 10,
                            max: 20,
                            grid: {
                                drawBorder: false,
                                color: "rgba(226, 232, 240, 0.7)"
                            },
